<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="@dimen/list_item_margin"
    android:id="@+id/click_container" android:background="?android:attr/selectableItemBackground"
    android:focusable="true" android:clickable="true">

    <ImageView
        android:id="@+id/img_picture"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:layout_marginTop="@dimen/list_item_icon_margin"
        android:layout_marginBottom="@dimen/list_item_icon_margin"
        android:layout_marginStart="@dimen/list_item_icon_margin_large"
        android:layout_marginEnd="@dimen/list_item_icon_margin"
        android:layout_centerVertical="true"
        android:clickable="false"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_centerVertical="true" android:orientation="vertical"
        android:layout_toEndOf="@id/img_picture" android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_tiny" android:layout_marginBottom="@dimen/margin_tiny">

        <TextView
            android:id="@+id/lbl_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_team_victor"
            android:clickable="false"
            style="@style/TextAppearance.AppCompat.Subhead" />

        <TextView
            android:id="@+id/lbl_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_tiny"
            android:text="@string/about_architect"
            android:clickable="false"
            style="@style/TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/lbl_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_tiny"
            android:text="@string/not_signed"
            android:textAllCaps="true"
            android:clickable="false"
            style="@style/TextAppearance.AppCompat.Small" />

    </LinearLayout>

</RelativeLayout>